<Window x:Class="DatabaseDesktopClient.Views.CreateTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Створити нову таблицю"
        Width="650" Height="650"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable контент -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Назва таблиці -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <Label Content="Назва таблиці:" FontWeight="SemiBold" FontSize="14"/>
                    <TextBox x:Name="TableNameTextBox"
                             Height="35"
                             FontSize="14"/>
                </StackPanel>

                <!-- Список колонок -->
                <GroupBox Grid.Row="1" Header="Колонки" Padding="10" Margin="0,0,0,15" FontSize="14">
                    <DataGrid x:Name="ColumnsDataGrid"
                              Height="150"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Тип даних" Binding="{Binding DisplayType}" Width="*" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Додавання колонки -->
                <GroupBox Grid.Row="2" Header="Додати колонку" Padding="10" Margin="0,0,0,15" FontSize="14">
                    <StackPanel>
                        <Label Content="Назва колонки:" FontWeight="SemiBold"/>
                        <TextBox x:Name="NewColumnNameTextBox"
                                 Height="35"
                                 Margin="0,0,0,10"/>

                        <Label Content="Тип даних:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="DataTypeComboBox"
                                  Height="35"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="➕ Додати"
                                    Click="AddColumn_Click"
                                    Height="40"
                                    Margin="0,0,5,0"
                                    Style="{StaticResource AddButton}"/>

                            <Button Grid.Column="1"
                                    Content="🗑️ Видалити"
                                    Click="RemoveColumn_Click"
                                    Height="40"
                                    Margin="5,0,0,0"
                                    Style="{StaticResource DeleteButton}"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Повідомлення про помилку -->
                <Border Grid.Row="3"
                        Background="#FFEBEE"
                        Padding="10"
                        CornerRadius="3"
                        Margin="0,0,0,10">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=ErrorTextBlock, Path=Visibility}" Value="Visible">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock x:Name="ErrorTextBlock"
                               Foreground="#C62828"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки (завжди внизу) -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Створити таблицю"
                        Click="CreateTable_Click"
                        Width="150"
                        Height="40"
                        Margin="0,0,10,0"/>
                <Button Content="Скасувати"
                        Click="Cancel_Click"
                        Width="100"
                        Height="40"
                        Background="#757575"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>