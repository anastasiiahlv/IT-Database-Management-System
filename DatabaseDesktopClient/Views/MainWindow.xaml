<Window x:Class="DatabaseDesktopClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управління базами даних" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.Row="0" Background="White" Padding="5">
            <MenuItem Header="Файл">
                <MenuItem Header="Створити базу даних" Click="CreateDatabase_Click"/>
                <MenuItem Header="Відкрити базу даних" Click="OpenDatabase_Click"/>
                <Separator/>
                <MenuItem Header="Зберегти" Click="SaveDatabase_Click"/>
                <MenuItem Header="Зберегти як..." Click="SaveDatabaseAs_Click"/>
                <Separator/>
                <MenuItem Header="Закрити базу даних" Click="CloseDatabase_Click"/>
                <Separator/>
                <MenuItem Header="Вихід" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Таблиці">
                <MenuItem Header="Створити таблицю" Click="CreateTable_Click"/>
                <MenuItem Header="Видалити таблицю" Click="DeleteTable_Click"/>
            </MenuItem>

            <MenuItem Header="Довідка">
                <MenuItem Header="Про базу даних" Click="ShowDatabaseInfo_Click"/>
                <MenuItem Header="Про програму" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Панель інструментів -->
        <ToolBar Grid.Row="1" Background="White" Padding="5">
            <Button Click="CreateDatabase_Click" ToolTip="Створити нову базу даних" Padding="10,5" Content="Створити БД"/>
            <Button Click="OpenDatabase_Click" ToolTip="Відкрити існуючу базу даних" Padding="10,5" Content="Відкрити"/>
            <Button Click="SaveDatabase_Click" ToolTip="Зберегти базу даних" Padding="10,5" Content="Зберегти"/>
            <Separator/>
            <Button Click="CreateTable_Click" ToolTip="Створити нову таблицю" Padding="10,5" Content="Створити таблицю" Style="{StaticResource AddButton}"/>
            <Button Click="DeleteTable_Click" ToolTip="Видалити таблицю" Padding="10,5" Content="Видалити таблицю" Style="{StaticResource DeleteButton}"/>
        </ToolBar>

        <!-- Основний контент -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва панель -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="База даних" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Grid.Row="1" x:Name="DatabaseNameText" Text="Немає відкритої бази даних" FontSize="14" Foreground="#616161" TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Таблиці:" FontWeight="SemiBold" Margin="0,0,0,5"/>

                        <ListBox Grid.Row="1" x:Name="TablesListBox" BorderThickness="0" MouseDoubleClick="TablesListBox_DoubleClick"/>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Права панель -->
            <Border Grid.Column="2" Background="White" Padding="20">
                <Grid x:Name="ContentArea">
                    <!-- Початковий екран -->
                    <StackPanel x:Name="WelcomePanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Система управління базами даних" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Створіть нову базу або відкрийте існуючу" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Створити базу даних" Click="CreateDatabase_Click" Width="180" Height="40" Margin="5"/>
                            <Button Content="Відкрити базу даних" Click="OpenDatabase_Click" Width="180" Height="40" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Статус бар -->
        <Border Grid.Row="3" Background="#2196F3" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="StatusText" Text="Готово" Foreground="White" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Таблиць: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TableCountText" Text="0" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock Text="Рядків: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="RowCountText" Text="0" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>