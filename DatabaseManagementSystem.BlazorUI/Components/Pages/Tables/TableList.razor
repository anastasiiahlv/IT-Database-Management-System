@* Components/Pages/Tables/TableList.razor *@
@page "/databases/{DatabaseName}/tables"
@using DatabaseManagementSystem.BlazorUI.Models
@using DatabaseManagementSystem.BlazorUI.Services
@inject ITableService TableService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Tables - @DatabaseName</PageTitle>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/databases">Databases</a></li>
        <li class="breadcrumb-item active">@DatabaseName</li>
    </ol>
</nav>

<h1>Tables in @DatabaseName</h1>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="NavigateToCreateTable">
            <i class="bi bi-plus-circle"></i> Create New Table
        </button>
        <button class="btn btn-secondary ms-2" @onclick="RefreshTables">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (tables == null || !tables.Any())
{
    <div class="alert alert-info">
        No tables found in this database. Create your first table to get started.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Table Name</th>
                    <th>Columns</th>
                    <th>Rows</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in tables)
                {
                    <tr>
                        <td>
                            <a href="/databases/@DatabaseName/tables/@table.Name/rows" class="text-decoration-none">
                                <i class="bi bi-table"></i> @table.Name
                            </a>
                        </td>
                        <td>@table.Columns.Count</td>
                        <td>@table.Rows.Count</td>
                        <td>@table.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-info" @onclick="() => NavigateToRows(table.Name)" title="View Rows">
                                    <i class="bi bi-list"></i>
                                </button>
                                <button class="btn btn-sm btn-primary" @onclick="() => NavigateToEditTable(table.Name)" title="Edit Structure">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteTable(table.Name)" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
    </div>
}

@code {
    [Parameter] public string DatabaseName { get; set; } = string.Empty;
    
    private List<TableDto>? tables;
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTables();
    }

    private async Task LoadTables()
    {
        isLoading = true;
        errorMessage = string.Empty;
        
        try
        {
            tables = await TableService.GetTablesAsync(DatabaseName);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading tables: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshTables()
    {
        await LoadTables();
    }

    private void NavigateToCreateTable()
    {
        Navigation.NavigateTo($"/databases/{DatabaseName}/tables/create");
    }

    private void NavigateToEditTable(string tableName)
    {
        Navigation.NavigateTo($"/databases/{DatabaseName}/tables/{tableName}/edit");
    }

    private void NavigateToRows(string tableName)
    {
        Navigation.NavigateTo($"/databases/{DatabaseName}/tables/{tableName}/rows");
    }

    private async Task DeleteTable(string tableName)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete table '{tableName}'? This action cannot be undone.");
        if (!confirmed) return;

        var response = await TableService.DeleteTableAsync(DatabaseName, tableName);
        if (response.Success)
        {
            successMessage = response.Message ?? "Table deleted successfully";
            await LoadTables();
        }
        else
        {
            errorMessage = response.Message ?? "Failed to delete table";
        }
    }
}